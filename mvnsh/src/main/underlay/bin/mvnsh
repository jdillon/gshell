DIRNAME=`dirname "$0"`

MAIN=org.apache.maven.mvnsh.Main

# OS specific support (must be 'true' or 'false').
cygwin=false;
case "`uname`" in
    CYGWIN*)
        cygwin=true
        ;;
esac

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
    [ -n "$SHELL_HOME" ] && SHELL_HOME=`cygpath --unix "$SHELL_HOME"`
    [ -n "$JAVACMD" ] && JAVACMD=`cygpath --unix "$JAVACMD"`
    [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
fi

# Locate SHELL_HOME if not it is not set
if [ "x$SHELL_HOME" = "x" ]; then
    SHELL_HOME=`cd "$DIRNAME/.."; pwd`
fi

# Determine the Java command to use to start the JVM
if [ -z "$JAVACMD" ]; then
    if [ -n "$JAVA_HOME" ]; then
        JAVACMD="$JAVA_HOME/bin/java"
    else
        JAVACMD="java"
    fi
fi

BOOTJAR="$SHELL_HOME/lib/boot/shell-bootstrap.jar"
if $cygwin ; then
    BOOTJAR=`cygpath --windows "$BOOTJAR"`
fi

# Start the JVM
exec "$JAVACMD" $JAVA_OPTS -Dshell.main=$MAIN -jar "$BOOTJAR" "$@"

