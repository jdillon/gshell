#!/bin/bash

project=gshell

function command_rebuild {
  mvn clean install $*
  unzip -d target gshell-assembly/target/gshell-*-bin.zip
}

function command_run {
  exec target/gshell-*/bin/gsh $*
}

function command_run-trace {
  export JAVA_OPTS=-Dcom.planet57.gossip.Log.threshold=TRACE
  exec target/gshell-*/bin/gsh $*
}

function command_run-mvn {
  mvn -N com.planet57.gshell:gshell-maven-plugin:LATEST:run $*
}
